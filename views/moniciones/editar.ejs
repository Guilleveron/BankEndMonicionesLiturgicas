<%- include ../layouts/cabecera.ejs %> 
<br/>
<br/>

<div class="card">
    <div class="card-header">
        Formulario de Datos de Monicion
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos de la Monición</h5>
        <p class="card-text">
            <form method="post" action="../actualizar/" class="row gx-3 gy-2 align-items-center">    
                <input type="hidden" name="id" value="<%=monicion.id%>">
                    <div class="col-sm-3">
                        <label class="visually-hidden" for="dia">Día:</label>
                        <select class="form-select" id="dia" name="dia">
                            <option selected><%=monicion.dia%></option>
                            <option value="Domingo">Domingo</option>
                            <option value="Lunes">Lunes</option>
                            <option value="Martes">Martes</option>
                            <option value="Miércoles">Miércoles</option>
                            <option value="Jueves">Jueves</option>
                            <option value="Viernes">Viernes</option>
                            <option value="Sábado">Sábado</option>
                        </select>
                    </div>
                    <div class="col-sm-3">
                        <label class="visually-hidden" for="semana">Semana:</label>
                        <select class="form-select" id="semana" name="semana">
                            <option selected><%=monicion.semana%></option>
                            <option value="I">I</option>
                            <option value="II">II</option>
                            <option value="III">III</option>
                            <option value="IV">IV</option>
                            <option value="V">V</option>
                            <option value="VI">VI</option>
                            <option value="VII">VII</option>
                            <option value="VIII">VIII</option>
                            <option value="IX">IX</option>
                            <option value="X">X</option>
                            <option value="XI">XI</option>
                            <option value="XII">XII</option>
                            <option value="XIII">XIII</option>
                            <option value="XIV">XIV</option>
                            <option value="XV">XV</option>
                            <option value="XVI">XVI</option>
                            <option value="XVII">XVII</option>
                            <option value="XVIII">XVIII</option>
                            <option value="XIX">XIX</option>
                            <option value="XX">XX</option>
                            <option value="XXI">XXI</option>
                            <option value="XXII">XXII</option>
                            <option value="XXIII">XXIII</option>
                            <option value="XXIV">XXIV</option>
                            <option value="XXV">XXV</option>
                            <option value="XXVI">XXVI</option>
                            <option value="XXVII">XXVII</option>
                            <option value="XXVIII">XXVIII</option>
                            <option value="XXIX">XXIX</option>
                            <option value="XXX">XXX</option>
                            <option value="XXXI">XXXI</option>
                            <option value="XXXII">XXXII</option>
                            <option value="XXXXIII">XXXIII</option>
                            <option value="XXXIV">XXXIV</option>                        
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="my-input">Festividad: (Sólo si es festividad o fecha especial)</label>
                        <input value="<%=monicion.titulo%>" minlength="5" class="form-control" type="text" name="titulo">
                    </div>
                    <div class="col-sm-3">
                        <label class="visually-hidden" for="ciclo">Ciclo:</label>
                        <select class="form-select" id="ciclo" name="ciclo">
                            <option selected><%=monicion.ciclo%></option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="A, B y C">A, B y C</option>
                          </select>
                    </div>
                    <div class="col-sm-3">
                        <label class="visually-hidden" for="tiempo">Tiempo:</label>
                        <select class="form-select" id="tiempo" name="tiempo">
                            <option selected><%=monicion.tiempo%></option>
                            <option value="de Adviento">Adviento</option>
                            <option value="de Navidad">Navidad</option>
                            <option value="Ordinario">Ordinario</option>
                            <option value="de Cuaresma">Cuaresma</option>
                            <option value="del Triduo Pascual">Triduo Pascual</option>
                            <option value="Pascual">Pascual</option>
                          </select>
                    </div>
                    <div class="form-group">
                        <label for="my-input">Monición de Entrada:</label>
                        <input value="<%=monicion.entrada%>" minlength="200" class="form-control" type="text" name="entrada">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Monición de las Lecturas:</label>
                        <input value="<%=monicion.lecturas%>" minlength="50" class="form-control" type="text" name="lecturas">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Respuesta Oración Universal:</label>
                        <input value="<%=monicion.respuestaOracionUniversal%>" minlength="15" maxlength="100" class="form-control" type="text" name="respuestaOracionUniversal">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Oración Universal 1:</label>
                        <input value="<%=monicion.oracionUniversal1%>" minlength="15" maxlength="400" class="form-control" type="text" name="oracionUniversal1">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Oración Universal 2:</label>
                        <input value="<%=monicion.oracionUniversal2%>" minlength="15" maxlength="400" class="form-control" type="text" name="oracionUniversal2">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Oración Universal 3:</label>
                        <input value="<%=monicion.oracionUniversal3%>" minlength="15" maxlength="400" class="form-control" type="text" name="oracionUniversal3">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Oración Universal 4:</label>
                        <input value="<%=monicion.oracionUniversal4%>" minlength="15" maxlength="400" class="form-control" type="text" name="oracionUniversal4">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Oración Universal 5:</label>
                        <input value="<%=monicion.oracionUniversal5%>" minlength="15" maxlength="400" class="form-control" type="text" name="oracionUniversal5">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Presentación de las Ofrendas:</label>
                        <input value="<%=monicion.presentacionDeLasOfrendas%>" minlength="15" maxlength="650" class="form-control" type="text" name="presentacionDeLasOfrendas">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Monición de la Comunión</label>
                        <input value="<%=monicion.comunion%>" minlength="15" class="form-control" type="text" name="comunion">
                    </div>
                    <div class="form-group">
                        <label for="my-input">Monición de Despedida:</label>
                        <input value="<%=monicion.despedida%>" minlength="15" class="form-control" type="text" name="despedida">
                    </div>
                    <div>
                        <button class="btn btn-success" type="submit">Actualizar</button>
                        <a class="btn btn-danger" href="/">Cancelar</a>
                    </div>
            </form>
        </p>
    </div>
</div>

